{
	"parserOptions": {
		"ecmaVersion": 6,
		"sourceType": "module",
		"ecmaFeatures": {
			"experimentalObjectRestSpread": true
		}
	},
	"env": {
		"browser": false,
		"node": true,
		"es6": true
	},
	"extends": [ "eslint:recommended" ],
	"rules": {
		"eqeqeq": "error",
		"indent": [ "error", "tab", { "SwitchCase": 1 } ],
		"quotes": [ "error", "single", { "allowTemplateLiterals": true } ],
		"max-len": [ "error", 150],
		"no-lonely-if": "error",
		"no-console": "off",
		"prefer-const": [ "error", {
			"destructuring": "any",
			"ignoreReadBeforeAssign": false
		}],
		"no-use-before-define": "error"
	}
}
